---
import '../style/global.css'
const { title = 'Prosjek Ocjena' } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container mx-auto px-4 sm:px-0">
      <nav
        aria-label="main"
        class="flex justify-between p-2 py-4 rounded-b bg-emerald-600 text-emerald-100 text-lg sm:px-8 sm:gap-8 sm:text-xl"
      >
        <a href="/" class="sm:text-2xl">🏠</a>
        <a
          href="/razred"
          class:list={[
            'sm:ml-auto',
            {
              'font-semibold text-emerald-50 underline':
                Astro.url.pathname.startsWith('/razred'),
            },
          ]}>Razred</a
        >
        <a
          href="/imenik"
          class:list={{
            'font-semibold text-emerald-50 underline':
              Astro.url.pathname.startsWith('/imenik'),
          }}>Imenik</a
        >
        <a
          href="/ocjene"
          class:list={{
            'font-semibold text-emerald-50 underline':
              Astro.url.pathname.startsWith('/ocjene'),
          }}>Ocjene</a
        >
        <a
          href="/rezultati"
          class:list={{
            'font-semibold text-emerald-50 underline':
              Astro.url.pathname.startsWith('/rezultati'),
          }}>Rezultati</a
        >
      </nav>

      <slot name="before-main" />

      <main>
        <slot />
      </main>

      <footer class="mt-24 p-8 rounded-t bg-emerald-600">
        <div
          class="flex flex-col-reverse items-center justify-between gap-4 sm:flex-row"
        >
          <p class="text-sm text-emerald-300">Programirao: Edis Selimović</p>
          <div
            class="flex gap-2 divide-x text-emerald-100 text-sm sm:text-base"
          >
            <a href="/">🏠</a>
            <a href="/razred" class="pl-2 hover:underline hover:text-emerald-50"
              >Razred</a
            >
            <a href="/imenik" class="pl-2 hover:underline hover:text-emerald-50"
              >Imenik</a
            >
            <a href="/ocjene" class="pl-2 hover:underline hover:text-emerald-50"
              >Ocjene</a
            >
            <a
              href="/rezultati"
              class="pl-2 hover:underline hover:text-emerald-50">Rezultati</a
            >
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
