---
import PageHeader from '../components/PageHeader.astro'
import Layout from '../layouts/Layout.astro'
---

<link
  rel="stylesheet"
  href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css"
  integrity="sha256-kLaT2GOSpHechhsozzB+flnD+zUyjE2LlfWPgU04xyI="
  crossorigin=""
/>

<Layout>
  <PageHeader
    slot="before-main"
    title="Kontakt podaci"
    content="Ispod su moji kontakti. Radujem se vašem pozivu ili dolasku."
  />

  <div class="container mx-auto px-4">
    <main class="mt-16">
      <div class="flex flex-col gap-16 sm:flex-row sm:gap-16 lg:gap-32">
        <!-- <div class="prose lg:prose-xl">
          <h2>Telefon:</h2>
          <ul>
            <li class="text-xl"><b>Tel:</b> 123 456 789</li>
            <li class="text-xl"><b>Mob:</b> 123 456 789</li>
            <li class="text-xl"><b>Mob:</b> 123 456 789</li>
          </ul>
        </div> -->

        <div class="prose lg:prose-xl">
          <h2>Pošaljite E-mail poruku:</h2>
          <button class="btn btn-primary" id="btnSE">Pošalji Poruku</button>
        </div>

        <div class="prose lg:prose-xl">
          <h2>Društvene mreže:</h2>

          <ul class="space-y-8 px-0 lg:px-0">
            <li class="flex items-center gap-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                class="w-8 m-0 p-0 lg:m-0 lg:p-0"
                viewBox="0 0 16 16"
              >
                <path
                  d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"
                ></path>
              </svg>
              <a href="https://www.facebook.com/edo979" class="m-0 lg:m-0"
                >Facebook</a
              >
            </li>
          </ul>
        </div>
      </div>

      <div class="mt-16 prose lg:prose-xl">
        <h2>Adresa:</h2>
        <!-- <p>Uvijek možete doći i posjetiti nas.</p> -->
        <address class="text-xl sm:text-2xl">
          Goražde <br />
          <i class="text-sm">(negdje oko markera na mapi ispod)</i>
        </address>
      </div>

      <div id="map" class="w-full h-80 mt-16 sm:h-64"></div>
    </main>
  </div>
</Layout>

<script
  is:inline
  src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"
  integrity="sha256-WBkoXOwTeyKclOHuWtc+i2uENFpDZ9YPdf5Hf+D7ewM="
  crossorigin=""
></script>

<script is:inline>
  let map = L.map('map').setView([43.6685, 18.9731], 14.5)

  L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution:
      '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
  }).addTo(map)

  L.marker([43.666839, 18.973081])
    .addTo(map)
    .bindPopup('Nalazimo se ovdje.<br> Dobro došli.')
    .openPopup()
</script>

<script>
  const btnSE = document.getElementById('btnSE')!

  if (btnSE)
    btnSE.addEventListener('click', () => {
      const jah = '@'
      const jah1 = 'gmail.com'
      window.location.href = `mailto:prezent${jah}${jah1}?subject=Pravljenje internet stranicet&body=Pozdrav...`
    })
</script>
