---
import Footer from '../components/Footer.astro'
import MainNavigation from '../components/MainNavigation.astro'

export interface Props {
  title?: string
}

const { title = 'Moja Stranica' } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="Izrada internet stranica" />
    <meta
      property="og:image"
      content="https://grade-calculator-edo979.vercel.app/grade-calculator"
    />
    <meta
      property="og:description"
      content="Želite internet stranicu? Počnite na pravi način. Izrađujem internet stranice po vašim zahtjevima i ukusu. Zauzmite dio interneta za svoj posao, uslugu koju nudite ili za sebe."
    />
    <meta
      property="og:url"
      content="https://grade-calculator-edo979.vercel.app/"
    />
    <meta property="og:image:width" content="300" />
    <meta property="og:image:height" content="200" />
    <meta property="og:type" content="website" />
    <title>{title}</title>
  </head>
  <body>
    <MainNavigation />

    <slot name="before-main" />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
