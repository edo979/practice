---
import Footer from '../components/Footer.astro'
import MainNavigation from '../components/MainNavigation.astro'

export interface Props {
  title?: string
}

const { title = 'Internet Stranice' } = Astro.props
---

<html lang="en">
  <head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-EK2LVD3CD0"
    ></script>
    <script src="../lib/analytics.js"></script>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Želite internet stranicu? Počnite na pravi način. Izrađujem internet stranice po vašim zahtjevima i ukusu. Zauzmite dio interneta za svoj posao, uslugu koju nudite ili za sebe."
    />
    <meta
      name="keywords"
      content="HTML, CSS, JavaScript, hosting, izrada stranica, internet stranice, programer, programiranje, goražde, bosna"
    />
    <meta property="og:title" content="Izrada internet stranica" />
    <meta
      property="og:image"
      content="https://grade-calculator-edo979.vercel.app/grade-calculator"
    />
    <meta
      property="og:description"
      content="Želite internet stranicu? Počnite na pravi način. Izrađujem internet stranice po vašim zahtjevima i ukusu. Zauzmite dio interneta za svoj posao, uslugu koju nudite ili za sebe."
    />
    <meta
      property="og:url"
      content="https://grade-calculator-edo979.vercel.app/"
    />
    <meta property="og:image:width" content="300" />
    <meta property="og:image:height" content="200" />
    <meta property="og:type" content="website" />
    <meta name="author" content="Selimović Edis" />
    <title>{title}</title>
  </head>
  <body>
    <MainNavigation />

    <slot name="before-main" />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
