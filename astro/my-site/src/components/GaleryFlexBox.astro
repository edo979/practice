---
export interface Props {
  title: string
  content: string
  href: string
  imgUrl: string
}

const { title, content, href, imgUrl } = Astro.props
---

<div
  class="max-w-2xl my-24 mx-auto flex flex-col-reverse items-center gap-8 sm:flex-row"
>
  <div
    class="prose mt-8 text-center sm:mt-0 sm:basis-2/3 sm:text-left lg:prose-xl"
  >
    <h3>{title}</h3>
    <p class="lead">
      {content}
    </p>
    <a href={href} class="btn btn-primary btn-wide" target="_blank"
      >Posjeti Stranicu</a
    >
  </div>

  <div class="relative sm:basis-1/3">
    <div class="absolute -z-10 inset-0 bg-primary translate-x-4 translate-y-4">
    </div>
    <img src={imgUrl} class="shadow" />
  </div>
</div>
