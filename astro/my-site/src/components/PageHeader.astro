---
export interface Props {
  title: string
  content: string
}

const { title, content } = Astro.props
---

<header
  class="h-96 -mt-16 pt-20 bg-primary bg-[url('/images/blue-metal-bg-md.jpg')] bg-center bg-cover md:bg-[url('/images/blue-metal-bg-lg.jpg')]"
>
  <div class="container mx-auto">
    <div class="prose px-4 mx-auto text-center text-base-300 lg:prose-xl">
      <h1 class="text-inherit">{title}</h1>
      <p class="lead text-inherit">
        {content}
      </p>
    </div>
  </div>
</header>
