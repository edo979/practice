---
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <header class="prose prose-invert">
    <h1>Traži Državu</h1>
  </header>

  <div class="mt-4 flex flex-row items-center justify-between gap-4">
    <div class="input-group max-w-md flex-1">
      <label for="name" class="block text-md tracking-tight">IME DRŽAVE</label>
      <input
        type="text"
        name="name"
        id="name"
        placeholder="upiši ime države..."
        class="w-full mt-1 px-1.5 py-1 rounded text-lg border-amber-500 border-2 text-zinc-800 focus:outline-none focus:ring-amber-400 focus:ring-1"
      />
    </div>

    <div class="input-group min-w-max">
      <label for="region" class="block text-md tracking-tight">REGIJA</label>
      <select
        name="region"
        id="region"
        class="mt-1 px-1.5 py-1 rounded text-lg border-amber-500 border-2 text-zinc-800 focus:outline-none focus:ring-amber-400 focus:ring-1"
      >
        <option value="afrika" class="text-zinc-800">Afrika</option>
      </select>
    </div>
  </div>
</Layout>
