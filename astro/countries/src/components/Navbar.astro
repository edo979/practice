---
const pathname = Astro.url.pathname
---

<nav
  class="w-full mb-8 p-4 flex items-center gap-6 bg-stone-800 uppercase text-stone-400 font-bold md:text-lg md:gap-8"
  aria-label="Main"
>
  <a href="/" class="flex items-center" aria-label="to home page">
    <span class="mb-1 text-2xl">🌍</span>
    <span>države</span>
  </a>

  <!-- Home page -->
  {
    pathname.length === 1 ? (
      <span
        class="ml-auto text-amber-500 hover:text-amber-500 cursor-default"
        aria-current="page"
      >
        Početna
      </span>
    ) : (
      <a href="/" class="ml-auto hover:text-stone-200">
        Početna
      </a>
    )
  }

  <!-- Search -->
  {
    pathname.startsWith('/drzave') ? (
      <span
        class="text-amber-500 hover:text-amber-500 cursor-default"
        aria-current="page"
      >
        pretraga
      </span>
    ) : (
      <a href="/drzave" class="hover:text-stone-200">
        pretraga
      </a>
    )
  }

  <!-- About -->
  {
    pathname.startsWith('/drzave') ? (
      <span
        class="text-amber-500 hover:text-amber-500 cursor-default"
        aria-current="page"
      >
        o stranici
      </span>
    ) : (
      <a href="/o_stranici" class="hover:text-stone-200">
        {' '}
        o stranici
      </a>
    )
  }
</nav>
