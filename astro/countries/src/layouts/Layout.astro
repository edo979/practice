---
import '../styles/global.css'

export interface Props {
  title?: string
}

const { title = 'Države Svijeta' } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-zinc-800 text-stone-300">
    <div class="container mt-8 mx-auto px-4 lg:mt-16">
      <slot />

      <footer
        class="mt-16 p-8 flex justify-between bg-stone-800 text-stone-600 text-sm"
      >
        <p>Programirao: Edis Selimović</p>
        <p>
          <a
            href="https://www.freepik.com/free-vector/tourism-travel-concept-realistic-style-with-planet-map-road-sign-airplane-vector-illustration_27997050.htm#page=3&query=earth&position=26&from_view=search&track=sph"
            >Image by bs_k1d</a
          > on Freepik
        </p>
      </footer>
    </div>
  </body>
</html>
